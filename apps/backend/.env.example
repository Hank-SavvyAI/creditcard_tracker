# Database
DATABASE_URL="postgresql://user:password@host:5432/database"
# Or use SQLite for development (not recommended for production)
# DATABASE_URL="file:./dev.db"

# JWT Secret (change in production!)
JWT_SECRET=your-secret-key-here

# Server Configuration
PORT=9001
FRONTEND_URL=http://localhost:9000

# Skip authentication in development (set to false in production)
SKIP_AUTH=false

# Telegram Bot Configuration
BOT_TOKEN=your-bot-token-here
BOT_USERNAME=your-bot-username-here

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:9001/api/auth/google/callback

# LINE Login Configuration
LINE_CHANNEL_ID=your-line-channel-id
LINE_CHANNEL_SECRET=your-line-channel-secret
LINE_CALLBACK_URL=http://localhost:9001/api/auth/line/callback

# LINE Messaging API (Notifications & Webhook)
LINE_NOTIFY_ENABLED=false
LINE_CHANNEL_ACCESS_TOKEN=your-line-channel-access-token
# Webhook URL to set in LINE Developers Console: https://your-domain.com/api/line/webhook

# Web Push Notifications (VAPID Keys)
# Generate with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:your-email@example.com

# Email Notifications (Gmail SMTP)
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-gmail-app-password

# Notification Test Mode (only send to user ID 3 during testing)
NOTIFICATION_TEST_MODE=true

# Cron Jobs (set to false when using Azure Logic Apps or other external schedulers)
ENABLE_CRON=true
